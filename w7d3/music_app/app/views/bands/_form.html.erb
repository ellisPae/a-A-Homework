<% action = (band.persisted? ? band_url : bands_url) %>
<%  method = (band.persisted? ? :patch : :post)  %>


<form action="<%= action %>" method="post">
    <input type="hidden" name="_method" value="<%= method %>">
    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <label for="band-name">Artist Name</label>
    <input type="text" name="band[name]" id="band-name" value="<%= band.name %>">

    <br><br>

    <% submit_text = (band.persisted? ? 'Update' : 'Create') + ' Artist' %>
    <input type="submit" value="<% submit_text %>">

</form>